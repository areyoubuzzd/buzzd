{
  "deploymentSettings": {
    "version": "1.0.0",
    "buildSteps": [
      {
        "name": "Clean previous build files",
        "command": "rm -rf dist"
      },
      {
        "name": "Production build",
        "command": "NODE_ENV=production npm run build"
      },
      {
        "name": "Verify build output",
        "command": "node scripts/prepare-deploy.js"
      }
    ],
    "cacheDirs": [
      "node_modules"
    ],
    "clearOnDeploy": [
      "dist/public/assets"
    ],
    "deployScript": "NODE_ENV=production node dist/index.js",
    "postDeployScripts": [
      "echo 'Application successfully deployed at ' $(date)"
    ]
  }
}